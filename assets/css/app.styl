@import 'nib'
@import '../../node_modules/jeet/stylus/jeet/*'
@import '_mixins.styl'
@import 'normalize.css'
@import '../oembed/oembed.css'

// Media queries
$desktop = 1600px
$laptop = 1100px
$tablet = 768px
$mobile = 400px

// Colors
$primary ?= #fff
$secondary ?= #000

// Metrics
$padding = 10px

// CSS Reset
global-reset()

webfont('Franklin Gothic', 'franklingothic', true, 'bold')

body,html
	width 100%
	height 100%
	background-color $primary
	-webkit-text-size-adjust 100%

body
	text-rendering optimizeLegibility
	font-smoothing()
	font-size 62.5%

p
	margin-bottom 1em

::selection
	background $secondary
	
::-moz-selection
	background $secondary

*
	hideselect()

a, a:hover, a:visited, a:focus
	color inherit
	text-decoration none
	cursor pointer

.loader
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $primary url('../images/loader.gif') center no-repeat
	background-size 15px
	z-index 10000